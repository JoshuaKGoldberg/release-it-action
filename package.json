{
	"name": "release-it-action",
	"version": "0.2.3",
	"description": "Runs release-it as a GitHub Action, with handling for semantic releases and protected branches. ðŸ“¤",
	"repository": {
		"type": "git",
		"url": "https://github.com/JoshuaKGoldberg/release-it-action"
	},
	"license": "MIT",
	"author": {
		"name": "Josh Goldberg",
		"email": "npm@joshuakgoldberg.com"
	},
	"type": "module",
	"main": "./lib/index.js",
	"files": [
		"lib/",
		"package.json",
		"LICENSE.md",
		"README.md"
	],
	"scripts": {
		"build": "tsc",
		"build:release": "ncc build src/action/index.ts -o dist",
		"format": "prettier \"**/*\" --ignore-unknown",
		"lint": "eslint . --max-warnings 0",
		"lint:knip": "knip",
		"lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --rules sentences-per-line",
		"lint:package-json": "npmPkgJsonLint ./package.json",
		"lint:packages": "pnpm dedupe --check",
		"lint:spelling": "cspell \"**\" \".github/**/*\"",
		"prepare": "husky install",
		"should-semantic-release": "should-semantic-release --verbose",
		"test": "vitest",
		"tsc": "tsc"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write"
	},
	"dependencies": {
		"@actions/core": "^1.10.1",
		"@actions/github": "^6.0.0",
		"@types/node": "^22.0.0",
		"execa": "^8.0.1"
	},
	"devDependencies": {
		"@eslint-community/eslint-plugin-eslint-comments": "^4.4.1",
		"@eslint/js": "^9.16.0",
		"@octokit/types": "^13.6.2",
		"@release-it/conventional-changelog": "^9.0.0",
		"@types/eslint-plugin-markdown": "^2.0.2",
		"@vercel/ncc": "^0.38.0",
		"@vitest/coverage-v8": "^2.0.0",
		"@vitest/eslint-plugin": "^1.1.14",
		"console-fail-test": "^0.5.0",
		"cspell": "^8.0.0",
		"eslint": "^9.16.0",
		"eslint-plugin-jsdoc": "^50.6.0",
		"eslint-plugin-jsonc": "^2.18.2",
		"eslint-plugin-markdown": "^5.1.0",
		"eslint-plugin-n": "^17.14.0",
		"eslint-plugin-package-json": "^0.19.0",
		"eslint-plugin-perfectionist": "^4.2.0",
		"eslint-plugin-regexp": "^2.7.0",
		"eslint-plugin-yml": "^1.16.0",
		"husky": "^9.0.0",
		"knip": "^5.0.0",
		"lint-staged": "^15.0.0",
		"markdownlint": "^0.37.0",
		"markdownlint-cli": "^0.43.0",
		"npm-package-json-lint": "^8.0.0",
		"npm-package-json-lint-config-default": "^7.0.0",
		"prettier": "^3.0.3",
		"prettier-plugin-curly": "^0.3.0",
		"prettier-plugin-packagejson": "^2.4.6",
		"release-it": "^17.10.0",
		"sentences-per-line": "^0.3.0",
		"should-semantic-release": "^0.3.0",
		"typescript": "^5.2.2",
		"typescript-eslint": "^8.17.0",
		"vitest": "^0.34.6"
	},
	"packageManager": "pnpm@9.15.0",
	"engines": {
		"node": ">=20"
	},
	"publishConfig": {
		"provenance": true
	}
}
